<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:SecretaryApp.ViewModels"
             x:Class="SecretaryApp.Views.SelectionPage">
    <ContentPage.BindingContext>
        <viewModel:SelectionPageViewModel></viewModel:SelectionPageViewModel>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lblName" Text="{Binding labelName, Mode=TwoWay}"/>
            <Label x:Name="lblNumber" Text="{Binding labelNumber, Mode=TwoWay}"/>
            <Label x:Name="lblMail" Text="{Binding labelMail, Mode=TwoWay}"></Label>
            <Entry x:Name="Message_Entry" Placeholder="Mesajınızı Giriniz" Text="{Binding MessageEntry, Mode=TwoWay}" ></Entry>
            <Entry x:Name="Mailsubject" Placeholder="Mailiniz için başlık girin" Text="{Binding MailEntry}"></Entry>
            <Button x:Name="SmsButton" Text="Send Sms" Command="{Binding smsCommand}"/>
            <Button x:Name="MailButton" Text="Send Mail" Command="{Binding MailCommand}"/>
            <Button x:Name="WpButton" Text="Send Whatsapp Message" Command="{Binding WpCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>